<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

<h2>title</h2>
<%= f.text_field :title %>

<h2>body</h2>
<%= f.text_field :body %>

<%= f.submit 'Create Book' %>

<% end %>
